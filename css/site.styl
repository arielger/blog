  a
    text-decoration: underline;
    color: currentColor;

.newsletter-subscriber
  visibility: hidden;
  min-height: 56px;
  min-width: 320px;
  padding 0 40px
  border-bottom 1px solid rgba(color_grey,.5)

  p
    margin: 15px;

  .btn-lg
    display: none;

    +breakpoint("desktop")
      display: inline-block;

  &.is-inline
    visibility: visible;
    text-align: center;
    padding: 40px 0;
    border-top: 1px solid rgba(209, 210, 212, 0.5);
    background-color: #5C666F;
    color: white;
    position: relative;
    border: 0;

    .btn-lg
      display: none;

    p
      font-size: 16px;
      color: white;
      font-weight: 500;

    .text
      font-weight: 500;
      font-size: 16px;
      margin-right: 10px;
      padding: 0;

    .form-control
      background: rgba(white, 0.1);
      color: white;

      &::-webkit-input-placeholder
        color: white;
        opacity: 0.7;

      &::-moz-placeholder
        color: white;
        opacity: 0.7;


  .text
    font-size: 12px;
    padding-top: 8px;

    +breakpoint("tablet")
      font-size: 14px;
      padding: 0;

  &.fixed
    visibility: visible;
    +breakpoint("tablet")
      height 56px

  > span
    display: inline-block;

  .form-control
    display: inline-block;
    border: 0;
    background: rgba(0,0,0,0.05);
    width: 100%;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    height: 35px;
    width: auto;
    margin: 10px 0;

    +breakpoint("tablet")
      margin: 10px 15px;
      margin-right: 5px;

  button
    height: 35px;
    line-height: 35px;
    padding: 0;
    width: 40px;

    i
      font-size: 18px;
      vertical-align: middle;
      line-height: 0;
      display: inline-block;

  .close-sticky
    width: 18px;
    height: 18px;
    text-indent: -10000em;
    opacity: .8;
    background-size: 100%;
    background-image: url("data:image/png;base64,");
    cursor pointer
    display block
    position absolute
    right 15px
    top 50%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    &:hover
      opacity 1

